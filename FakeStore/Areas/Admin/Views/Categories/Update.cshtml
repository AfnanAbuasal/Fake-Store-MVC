@model Category
@section PageTitle {
        Update Category Dashboard
}
@section Title {
        Update Category
}
@section Footer {
        End of Update Category
}
@section Script {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>
<body>
    <form asp-area="Admin" asp-action="update" asp-controller="Categories">
        <input hidden name="ID" type="text" class="form-control" value="@Model.ID" />
        <div class="form-group">
            <label asp-for="Name" for="categoryName">Category Name</label>
            <input asp-for="Name" name="Name" type="text" class="form-control" id="categoryName" value="@Model.Name">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Update</button>
    </form>
</body>
</html>