@model List<Brand>
@section PageTitle {
    Brands Dashboard
}
@section Title {
        Brands
}
@section Footer {
    End of Brands
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">ID</th>
                    <th>Brand</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>
                            <a href="/admin/brands/update/@item.ID" class="btn btn-primary btn-sm">Update</a>
                            <a href="/admin/brands/delete/@item.ID" onclick="return confirm('Are you sure you want to delete @item.Name brand?');" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

